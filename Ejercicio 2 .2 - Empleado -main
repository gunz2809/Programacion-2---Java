package com.mycompany.ejercicio_2_2_2;

import java.util.Scanner;
public class Ejercicio_2_2_2 {

    public static void main(String[] args) {
      
        
        
        Scanner usu = new Scanner(System.in);
        
        String nombre;
        double sueldo;
        
        System.out.println("Ingrese su nombre: ");
        nombre = usu.next();
        
        System.out.println("Ingrese su sueldo: ");
        sueldo = usu.nextDouble();
        
        empleado emp = new empleado(nombre,sueldo);
        
        emp.toString();
        
        emp.pagaImpuestos(sueldo);
        
       
        
        
        
        
    }
}
