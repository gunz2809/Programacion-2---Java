
import java.util.Scanner;

public class Ejercico_3 {

    /*EJERCICIO 3 
Realizar un programa donde el usuario ingrese  
números hasta que ingrese el 0, ahí debe devolvernos  
cuál fue el mayor número ingresado. 
     */
    public static void main(String[] args) {

        int num = 0;
        int mayor;
        Scanner usu = new Scanner(System.in);

        do {

            System.out.println("Ingrese un numero: ");
            num = usu.nextInt();
            
            System.out.println("Para salir ingrese 0");
            
            if (num > 0) {
            
            mayor = num;
            System.out.println("El numero mayor ingresado es: " + mayor);

        }

        } while (num != 0);

        

    }

}
