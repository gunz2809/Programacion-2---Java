package cuenta;

import java.util.Scanner;

public class main {

    public static void main(String[] args) {

        Scanner usu = new Scanner(System.in);
        int op;

        //ingreso y retiro
        double ingresar;
        double retirar;

        String tit;
        int mon;

        System.out.println("Ingrese nombre del titular: ");
        tit = usu.next();

        System.out.println("Ingrese su monto: ");
        mon = usu.nextInt();

        Cuenta per = new Cuenta(tit, mon);

        Cuenta ingresa = new Cuenta();
        Cuenta retira = new Cuenta();

        do {
            System.out.println("***Cuenta Bancaria***");
            System.out.println("");
            System.out.println("1.Ingresar dinero");
            System.out.println("2.Retirar dinero");
            System.out.println("3.Consultar saldo");
            System.out.println("0.Salir");
            System.out.println("");
            System.out.println("Ingrese una opcion: ");
            op = usu.nextInt();
            switch (op) {

                case 1:

                    double mon_in;

                    System.out.println("****INGRESAR****");
                    System.out.println("");
                    System.out.println("Monto: " + mon);
                    System.out.println("");
                    System.out.println("Ingrese la cantidad de dinero que desea guardar: ");
                    mon_in = usu.nextDouble();

                    System.out.println("");
                    System.out.println("Monto actual: " + ingresa.getMonto());
                    
                    
                    ingresa.setMonto(mon);
                    break;
                case 2:
                    double mon_ret;
                    System.out.println("****RETIRAR****");
                    System.out.println("");
                    System.out.println("Ingrese la cantidad de dinero que desea retirar: ");
                    mon_ret = usu.nextDouble();

                  

                    break;

                case 3:

                case 0:
                    System.out.println("Adios");
                    break;

                default:
                    System.out.println("Ingrese una opcion valida");

            }

        } while (op != 0);

    }

}
